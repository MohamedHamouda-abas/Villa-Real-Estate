@using MagicVila_Web.Models.Dto
@model LoginRequestDto
<div class="container">
    <form method="post" class="login-form">
        <h2>Login</h2>
        <div class="input-group">
            <input asp-for="UserName" type="text" id="username" name="username" required>
            <label for="username">Username</label>
        </div>
        <div class="input-group">
            <input asp-for="Password" type="password" id="password" name="password" required>
            <label for="password">Password</label>
        </div>
        <button class="btn btn-primary" type="submit">Log In</button>
        <a asp-controller="Auth" asp-action="Register" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Account
        </a>
    </form>
</div> 