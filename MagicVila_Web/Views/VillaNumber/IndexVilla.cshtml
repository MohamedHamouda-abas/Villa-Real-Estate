@using MagicVila_Web.Models.Dto
@model IEnumerable<VailaNumberDto>

<div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Villa List</h2>
        </div>
    </div>
</div>

<div class="card-body pt-4">
    <div class="row pb-3">
        <div class="col-6"></div>
        <div class="col-6  text-end ">
            <a asp-controller="VillaNumber" asp-action="VillaNumberCreate" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create A new Villa
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>VailaName</th>
            <th>VailaNumber</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Vaila.Name</td>
                <td>@cat.VailaNo</td>              
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Villa" asp-action="VillaUpdate" asp-route-villaId="@cat.VailaNo" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Update
                        </a>
                        <a asp-controller="Villa" asp-action="VillaDelete" asp-route-villaId="@cat.VailaNo" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>