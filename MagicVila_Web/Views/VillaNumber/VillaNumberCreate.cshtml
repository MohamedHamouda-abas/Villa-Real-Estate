@using MagicVila_Web.Models.Dto
@using MagicVila_Web.VM
@model VillaNumberCreateVM
<div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">villa List</h2>
        </div>
    </div>
</div>
<form method="post" class="row">
    <div class="border p-3  ">
        <div class="form-floating py-2 col-12">
            <input asp-for="VailaNumber.VailaNo" class="form-control border-0 shadow" maxlength="256" />
            <label asp-for="VailaNumber.VailaNo" class="ms-2"></label>
            <span asp-validation-for="VailaNumber.VailaNo" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <select asp-for="VailaNumber.VailaId" class="form-select border-0 shadow" asp-items="@Model.Vailalist" maxlength="256">
                <option disabled selected>--SelectOne--</option>
            </select>
            <label asp-for="VailaNumber.VailaId" class="ms-2"></label>
            <span asp-validation-for="VailaNumber.VailaId" class="text-danger"></span>
        </div> 
        <div class="form-floating py-2 col-12">
            <input asp-for="VailaNumber.SpecialDetails" class="form-control border-0 shadow" maxlength="256" />
            <label asp-for="VailaNumber.SpecialDetails" class="ms-2"></label>
            <span asp-validation-for="VailaNumber.SpecialDetails" class="text-danger"></span>
        </div>



        <div class="row" pt-2>
            <div class="col-6 col-md-2">
                <button type="submit" class="btn btn-outline-primary" style="width:150px">Create</button>
            </div>

            <div class="col-6 col-md-2">
                <a asp-controller="VillaNumber" asp-action="IndexVilla" class="btn btn-outline-secondary" style="width:150px">Back To List</a>
            </div>
        </div>

    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}